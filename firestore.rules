rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is the owner of a document.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'users' collection and its subcollections.
    match /users/{userId} {
      // Allow a user to create their own user document.
      allow create: if isOwner(userId);
      
      // A user can only read or delete their own user document.
      allow get, delete: if isOwner(userId);

      // Rules for the 'incident_reports' subcollection.
      match /incident_reports/{incidentReportId} {
        // A user can create, read, and list their own incident reports.
        allow create, get, list: if isOwner(userId);
        
        // Updates and deletes are disallowed to ensure immutability of reports.
        allow update, delete: if false;
      }
    }

    // Publicly readable collection for support resources.
    match /resources/{resourceId} {
      allow get, list: if true;
      // Writes are disallowed from the client for security.
      allow create, update, delete: if false;
    }

    // Publicly readable collection for community posts.
    // Writes require authentication to prevent spam.
    match /community_posts/{communityPostId} {
      allow get, list: if true;
      allow create: if request.auth != null;
      // Updates and deletes are disallowed to maintain integrity.
      allow update, delete: if false;
    }

    // Publicly readable collection for safe locations.
    match /safe_locations/{safeLocationId} {
      allow get, list: if true;
      // Writes are disallowed from the client for security.
      allow create, update, delete: if false;
    }
  }
}
